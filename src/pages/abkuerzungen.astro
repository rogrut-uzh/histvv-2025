---
import DefaultLayout from '~/layouts/DefaultLayout.astro';
import Breadcrumb from "~/components/page/Breadcrumb.astro";
import MetaHead from "~/components/page/MetaHead.astro";
import PageIntro from "~/components/page/PageIntro.astro";
import PageTextPict from "~/components/page/PageTextPict.astro";

const website_title = "Historische Vorlesungsverzeichnisse der Universität Zürich"
const page_title = "Abkürzungen"
const website_byline = "1833 - 1900"
const website_description = " "

const breadcrumb = [
  { label: "Home", href: "/" },
  { label: "Abkürzungen", href: "/abkuerzungen/" }
];
---
<DefaultLayout>
    <Breadcrumb items={breadcrumb} />

    <MetaHead slot="head"
        title={`${page_title} | ${website_title} ${website_byline}`}
        description={`${website_description}`}
    />

    <PageIntro>{`${page_title}`}</PageIntro>
    
    <PageTextPict>
        <h2>Anstellungsverhältnis/akademischer Titel</h2>
        <table class="tbl_abk">
            <tr>
            <th>PD</th>
            <td>Privatdozent</td>
            </tr>
            <tr>
            <th>EO</th>
            <td>Extraordinarius</td>
            </tr>
            <tr>
            <th>O</th>
            <td>Ordinarius</td>
            </tr>
            <tr>
            <th>HP</th>
            <td>Honorarprofessor</td>
            </tr>
            <tr>
            <th>Doz</th>
            <td>Dozent</td>
            </tr>
        </table>
        <h2>Dekanate</h2>
        <table class="tbl_abk">
            <tr>
            <th>Dekan/T</th>
            <td>Dekan der Theologischen Fakultät</td>
            </tr>
            <tr>
            <th>Dekan/S</th>
            <td>Dekan der Staatswissenschaftlichen Fakultät</td>
            </tr>
            <tr>
            <th>Dekan/M</th>
            <td>Dekan der Medizinischen Fakultät</td>
            </tr>
            <tr>
            <th>Dekan/P</th>
            <td>Dekan der Philosophischen Fakultät</td>
            </tr>
            <tr>
            <th>Dekan/P1</th>
            <td>Dekan der Philosophischen Fakultät: Philologisch-historische
            Sektion (ab 1860)</td>
            </tr>
            <tr>
            <th>Dekan/P2</th>
            <td>Dekan der Philosophischen Fakultät:
            Mathematisch-naturwissenschaftliche Sektion (ab 1860)</td>
            </tr>
        </table>
        <h2>Zeitangaben/Wochenstunden</h2>
        <table class="tbl_abk">
            <tr>
            <th>Mo</th>
            <td>Montag</td>
            </tr>
            <tr>
            <th>Di</th>
            <td>Dienstag</td>
            </tr>
            <tr>
            <th>Mi</th>
            <td>Mittwoch</td>
            </tr>
            <tr>
            <th>Do</th>
            <td>Donnerstag</td>
            </tr>
            <tr>
            <th>Fr</th>
            <td>Freitag</td>
            </tr>
            <tr>
            <th>Sa</th>
            <td>Samstag</td>
            </tr>
            <tr>
            <th>So</th>
            <td>Sonntag</td>
            </tr>
            <tr>
            <th>St</th>
            <td>Anzahl Wochenstunden</td>
            </tr>
        </table>
        <h2>Semester</h2>
        <table class="tbl_abk">
            <tr>
            <th>SS</th>
            <td>Sommersemester</td>
            </tr>
            <tr>
            <th>WS</th>
            <td>Wintersemester</td>
            </tr>
        </table>
        <h2>Dozentenseiten</h2>
        <table class="tbl_abk">
            <tr>
            <th>UZV</th>
            <td>Die Universität Zürich 1833-1933 und ihre Vorläufer, bearbeitet
            von Ernst Gagliardi, Hans Nabholz und Jean Strohl, Zürich 1938</td>
            </tr>
            <tr>
            <th>PND</th>
            <td>Personennormdatei der Deutschen Nationalbibliothek</td>
            </tr>
        </table>
    </PageTextPict>
</DefaultLayout>